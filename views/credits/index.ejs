<%- include('../_partials/header') %>
<ul id="slide-out" class="side-nav fixed teal lighten-2">
    <li>
      <% if (user.picture) { %> 
        <img src="<%= user.picture %>">
      <% } else { %>
        <li class="center-align"><img src="/images/person-placeholder.png" alt="profile-pic"></li>
     <% } %>
    </li>
    <li><% if (user.firstName && user.lastName) { %>
        <h4><%= user.firstName + ' ' + user.lastName  %></h4>
        <% } else { %>
            <div class="input-field col s6">
                <input id="hometown" type="text" class="validate">
                <label class="active" for="hometown">Hometown</label>
            </div>
        <% } %>
    </li>
</ul>
<div class="navbar-fixed valign-wrapper">
    <nav>
        <a href="#!" class="brand-logo">Music DB</a>
        <ul class="right hide-on-med-and-down">
            <div class="nav-wrapper">
                <li>    
                    <div class="center row">
                        <div class="col s12" >
                            <div id="topbarsearch">
                                <div class="input-field col s6 s12 white">
                                    <i class="black-text material-icons prefix">search</i>
                                    <input type="text" placeholder="search" id="autocomplete-input" class="autocomplete black-text" >
                                </div>
                            </div>
                        </div>
                    </div>          
                </li>
            </div>
        </ul>
    </nav>
</div>
<main class="credits-page">
    <section id="credits-container">
        <% user.credits.forEach(function(credit) { %>
            <div>
                <p><%= credit.action %></p>
                <p><%= credit.instrument %></p>
                <p><%= credit.artist %></p>
                <div class="col s2">
                        <button class="waves-effect waves-light btn deleteCredit" onclick="deleteCredit('<%= credit._id %>')">Delete</button>
                    </div>
            </div>
            
        <% }) %>
    </section>
    <h3>Add a Credit</h3>
    <div class="row col s12 valign-wrapper">
        <div class="col s1 left-align"><h5>I</h5></div>
        <div class="input-field col s2 left-align">
            <select id="action">
                <option value="" disabled selected>Choose one...</option>
                <option value="played">played</option>
                <option value="wrote">wrote</option>
                <option value="produced">produced</option>
            </select>
        </div>
        <div class="input-field col s2 left-align">
            <i class="material-icons prefix">textsms</i>
            <input type="text" id="autocomplete-input" class="autocomplete-instruments">
            <label for="autocomplete-input">Start typing...</label>
        </div>
        <div class="col s1 left-align"><h5>with</h5></div>
        <div class="input-field col s4 left-align">
            <i class="material-icons prefix">textsms</i>
            <input type="text" id="autocomplete-input" class="autocomplete search-spotify" oninput="searchSpotify()">
            <label for="autocomplete-input">Start typing... (Powered by Spotify)</label>
        </div>
        <div class="col s2">
            <a id="add-credit" class="waves-effect waves-light btn mdb-submit">Submit</a>
        </div>
    </div>
</main>

<%- include('../_partials/footer')%>